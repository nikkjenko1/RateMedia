@model RateMedia.Models.Movie
@{
    ViewData["Title"] = "Dodaj nov film";
    var genres = ViewBag.Genres as List<RateMedia.Models.Genre>;
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Dodaj nov film</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Title" class="form-label">Naslov *</label>
                        <input asp-for="Title" class="form-control" required />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Year" class="form-label">Leto *</label>
                            <input asp-for="Year" type="number" class="form-control" min="1888" max="2100" required />
                            <span asp-validation-for="Year" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Žanri</label>
                            <div class="border rounded p-3" style="max-height: 200px; overflow-y: auto;">
                                @if (genres != null)
                                {
                                    @foreach (var genre in genres)
                                    {
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox"
                                                   name="selectedGenres" value="@genre.Id" id="genre@(genre.Id)">
                                            <label class="form-check-label" for="genre@(genre.Id)">
                                                @genre.Name
                                            </label>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Opis</label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Director" class="form-label">Režiser</label>
                        <input asp-for="Director" class="form-control" />
                        <span asp-validation-for="Director" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Actors" class="form-label">Igralci</label>
                        <input asp-for="Actors" class="form-control" placeholder="Igralec 1, Igralec 2, ..." />
                        <span asp-validation-for="Actors" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PosterUrl" class="form-label">URL Posterja</label>
                        <input asp-for="PosterUrl" type="url" class="form-control"
                               placeholder="https://primer.com/poster.jpg" />
                        <span asp-validation-for="PosterUrl" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Nazaj
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-save"></i> Shrani film
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}