@model RateMedia.Models.Movie

@{
    ViewData["Title"] = Model.Title;
    var userRating = ViewBag.UserRating as RateMedia.Models.Rating;
}

<div class="row mb-4">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Domov</a></li>
                <li class="breadcrumb-item"><a asp-controller="Movies" asp-action="Index">Filmi</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-md-3 mb-4">
        @if (!string.IsNullOrEmpty(Model.PosterUrl))
        {
            <img src="@Model.PosterUrl" class="img-fluid rounded shadow" alt="@Model.Title">
        }
        else
        {
            <div class="bg-secondary rounded d-flex align-items-center justify-content-center" style="height: 450px;">
                <i class="bi bi-film" style="font-size: 6rem; color: white;"></i>
            </div>
        }

        @if (User.Identity?.IsAuthenticated == true)
        {
            <div class="mt-3">
                <form asp-action="AddToList" method="post" class="d-grid gap-2">
                    <input type="hidden" name="movieId" value="@Model.Id" />
                    @if (ViewBag.InFavorites == true)
                    {
                        <button type="submit" name="listType" value="favorites" class="btn btn-outline-danger"
                                formaction="@Url.Action("RemoveFromList")">
                            <i class="bi bi-heart-fill"></i> Odstrani iz priljubljenih
                        </button>
                    }
                    else
                    {
                        <button type="submit" name="listType" value="favorites" class="btn btn-outline-danger">
                            <i class="bi bi-heart"></i> Dodaj med priljubljene
                        </button>
                    }

                    @if (ViewBag.InWatchlist == true)
                    {
                        <button type="submit" name="listType" value="watchlist" class="btn btn-outline-primary"
                                formaction="@Url.Action("RemoveFromList")">
                            <i class="bi bi-eye-fill"></i> Odstrani z watchlista
                        </button>
                    }
                    else
                    {
                        <button type="submit" name="listType" value="watchlist" class="btn btn-outline-primary">
                            <i class="bi bi-eye"></i> Dodaj na watchlist
                        </button>
                    }

                    @if (ViewBag.InToWatch == true)
                    {
                        <button type="submit" name="listType" value="to-watch" class="btn btn-outline-warning"
                                formaction="@Url.Action("RemoveFromList")">
                            <i class="bi bi-bookmark-fill"></i> Odstrani iz to-watch
                        </button>
                    }
                    else
                    {
                        <button type="submit" name="listType" value="to-watch" class="btn btn-outline-warning">
                            <i class="bi bi-bookmark"></i> Dodaj na to-watch
                        </button>
                    }
                </form>

                <hr>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-secondary w-100 mb-2">
                    <i class="bi bi-pencil"></i> Uredi
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger w-100">
                    <i class="bi bi-trash"></i> Izbriši
                </a>
            </div>
        }
    </div>

    <div class="col-md-9">
        <h1>@Model.Title</h1>

        <div class="mb-3">
            @if (Model.MovieGenres != null && Model.MovieGenres.Any())
            {
                @foreach (var mg in Model.MovieGenres)
                {
                    <span class="badge bg-secondary me-1">@mg.Genre.Name</span>
                }
            }
            <span class="badge bg-info">@Model.Year</span>
        </div>

        <div class="card bg-warning bg-opacity-10 border-warning mb-4">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <h3 class="mb-0">
                            <i class="bi bi-star-fill text-warning"></i>
                            @Model.AverageRating.ToString("F1")
                        </h3>
                        <small class="text-muted">@Model.Ratings.Count ocen</small>
                    </div>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="col-md-6">
                            <form asp-action="Rate" method="post" id="ratingForm">
                                <input type="hidden" name="movieId" value="@Model.Id" />
                                <div class="d-flex align-items-center">
                                    <label class="me-2">Tvoja ocena:</label>
                                    <select name="value" class="form-select form-select-sm w-auto" onchange="this.form.submit()">
                                        <option value="">--</option>
                                        @for (int i = 1; i <= 10; i++)
                                        {
                                            <option value="@i" selected="@(userRating?.Value == i)">@i</option>
                                        }
                                    </select>
                                    @if (userRating != null)
                                    {
                                        <span class="ms-2 text-success">
                                            <i class="bi bi-check-circle-fill"></i> @userRating.Value
                                        </span>
                                    }
                                </div>
                            </form>
                        </div>
                    }
                    else
                    {
                        <div class="col-md-6">
                            <a asp-controller="Account" asp-action="Login" class="btn btn-sm btn-primary">
                                Prijavi se za ocenjevanje
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <div class="mb-4">
                <h4>Opis</h4>
                <p>@Model.Description</p>
            </div>
        }

        <div class="row mb-4">
            @if (!string.IsNullOrEmpty(Model.Director))
            {
                <div class="col-md-6 mb-3">
                    <strong><i class="bi bi-person-video3"></i> Režiser:</strong> @Model.Director
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.Actors))
            {
                <div class="col-md-6 mb-3">
                    <strong><i class="bi bi-people"></i> Igralci:</strong> @Model.Actors
                </div>
            }
        </div>

        <div class="mt-5">
            <h4><i class="bi bi-chat-dots"></i> Komentarji (@Model.Comments.Count)</h4>

            @if (User.Identity?.IsAuthenticated == true)
            {
                <div class="card mb-4">
                    <div class="card-body">
                        <form asp-action="Comment" method="post">
                            <input type="hidden" name="movieId" value="@Model.Id" />
                            <div class="mb-3">
                                <label for="content" class="form-label">Dodaj komentar</label>
                                <textarea class="form-control" id="content" name="content" rows="3"
                                      placeholder="Napiši svoje mnenje..." required maxlength="1000"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-send"></i> Objavi
                            </button>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <a asp-controller="Account" asp-action="Login">Prijavite se</a> za komentiranje.
                </div>
            }

            <div id="commentsList">
                @if (Model.Comments != null && Model.Comments.Any())
                {
                    @foreach (var comment in Model.Comments)
                    {
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 class="mb-1">
                                            <i class="bi bi-person-circle"></i> @comment.User.UserName
                                        </h6>
                                        <small class="text-muted">@comment.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small>
                                    </div>
                                    @if (User.Identity?.Name == comment.User.UserName)
                                    {
                                        <form asp-action="DeleteComment" method="post" class="d-inline">
                                            <input type="hidden" name="commentId" value="@comment.Id" />
                                            <input type="hidden" name="movieId" value="@Model.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger"
                                                    onclick="return confirm('Ste prepričani, da želite izbrisati ta komentar?')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    }
                                </div>
                                <p class="mt-2 mb-0">@comment.Content</p>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">Še ni komentarjev. Bodite prvi!</p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/@@microsoft/signalr@7.0.0/dist/browser/signalr.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/commentHub")
            .build();

        connection.on("ReceiveComment", function (comment) {
            const commentHtml = `
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="mb-1">
                                    <i class="bi bi-person-circle"></i> ${comment.userName}
                                </h6>
                                <small class="text-muted">${comment.createdAt}</small>
                            </div>
                        </div>
                        <p class="mt-2 mb-0">${comment.content}</p>
                    </div>
                </div>
            `;
            document.getElementById("commentsList").insertAdjacentHTML('afterbegin', commentHtml);
        });

        connection.start().then(function () {
            connection.invoke("JoinMovieRoom", @Model.Id);
        }).catch(function (err) {
            console.error(err.toString());
        });

        window.addEventListener("beforeunload", function() {
            connection.invoke("LeaveMovieRoom", @Model.Id);
        });
    </script>
}