@model RateMedia.Models.Movie

@{
    ViewData["Title"] = "Izbriši film";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="bi bi-trash"></i> Izbriši film</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    <strong>Opozorilo!</strong> Ali ste prepričani, da želite izbrisati ta film?
                </div>

                <div class="row">
                    <div class="col-md-4">
                        @if (!string.IsNullOrEmpty(Model.PosterUrl))
                        {
                            <img src="@Model.PosterUrl" class="img-fluid rounded" alt="@Model.Title">
                        }
                        else
                        {
                            <div class="bg-secondary rounded d-flex align-items-center justify-content-center"
                                 style="height: 300px;">
                                <i class="bi bi-film" style="font-size: 4rem; color: white;"></i>
                            </div>
                        }
                    </div>
                    <div class="col-md-8">
                        <h3>@Model.Title</h3>
                        <p class="text-muted">@Model.Year</p>

                        @if (Model.MovieGenres != null && Model.MovieGenres.Any())
                        {
                            <p>
                                <strong>Žanri:</strong>
                                @foreach (var mg in Model.MovieGenres)
                                {
                                    <span class="badge bg-secondary me-1">@mg.Genre.Name</span>
                                }
                            </p>
                        }

                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <p><strong>Opis:</strong> @Model.Description</p>
                        }

                        <p class="text-danger">
                            <strong>Opozorilo:</strong> Izbrisane bodo tudi vse ocene, komentarji in seznami,
                            povezani s tem filmom. Tega dejanja ni mogoče razveljaviti.
                        </p>
                    </div>
                </div>

                <hr>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Prekliči
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Da, izbriši film
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>