@model List<RateMedia.Models.Movie>

@{
    ViewData["Title"] = "Išči filme - TMDb";
}

<div class="row mb-4">
    <div class="col-12">
        <h1><i class="bi bi-cloud-download"></i> Iskalnik</h1>
        <p class="text-muted">Poiščite filme v RateMedia</p>
    </div>
</div>

<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Search" method="get">
            <div class="input-group input-group-lg">
                <input type="text" class="form-control" name="query"
                       value="@ViewBag.Query" placeholder="Vnesite naslov filma..." required>
                <button class="btn btn-primary" type="submit">
                    <i class="bi bi-search"></i> Išči
                </button>
            </div>
        </form>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <h5 class="mb-3">Rezultati iskanja:</h5>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var movie in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="row g-0">
                        <div class="col-4">
                            @if (!string.IsNullOrEmpty(movie.PosterUrl))
                            {
                                <img src="@movie.PosterUrl" class="img-fluid rounded-start h-100"
                                     alt="@movie.Title" style="object-fit: cover;">
                            }
                            else
                            {
                                <div class="bg-secondary d-flex align-items-center justify-content-center h-100 rounded-start">
                                    <i class="bi bi-film" style="font-size: 2rem; color: white;"></i>
                                </div>
                            }
                        </div>
                        <div class="col-8">
                            <div class="card-body">
                                <h6 class="card-title">@movie.Title</h6>
                                <p class="card-text">
                                    <small class="text-muted">@movie.Year</small>
                                </p>
                                @if (!string.IsNullOrEmpty(movie.Description))
                                {
                                    <p class="card-text small">
                                        @(movie.Description.Length > 100
                                                                    ? movie.Description.Substring(0, 100) + "..."
                                                                    : movie.Description)
                        </p>
                                                }
                                <form asp-action="ImportFromTmdb" method="post">
                                    <input type="hidden" name="tmdbId" value="@movie.TmdbId" />
                                    <button type="submit" class="btn btn-sm btn-success w-100">
                                        <i class="bi bi-download"></i> Uvozi
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else if (!string.IsNullOrEmpty(ViewBag.Query as string))
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Ni rezultatov za "@ViewBag.Query". Poskusite z drugim iskanjem.
    </div>
}
else
{
    <div class="text-center text-muted py-5">
        <i class="bi bi-search" style="font-size: 4rem;"></i>
        <p class="mt-3">Vnesite naslov filma, ki ga želite poiskati</p>
    </div>
}