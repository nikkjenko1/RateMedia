@model ErrorViewModel
@{
    ViewData["Title"] = "Napaka";
}

<div class="text-center">
    <h1 class="display-1 text-danger">
        <i class="bi bi-exclamation-triangle"></i>
    </h1>
    <h1 class="text-danger">Napaka</h1>
    <h2 class="text-danger">Pri obdelavi vaše zahteve je prišlo do napake.</h2>

    @if (Model?.ShowRequestId == true)
    {
        <p>
            <strong>ID zahteve:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-house"></i> Nazaj na domačo stran
        </a>
    </div>
</div>