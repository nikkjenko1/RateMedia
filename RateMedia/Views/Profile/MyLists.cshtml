@model List<RateMedia.Models.Favorite>

@{
    var listType = ViewBag.ListType as string;
    ViewData["Title"] = listType switch
    {
        "favorites" => "Priljubljeni filmi",
        "watchlist" => "Watchlist",
        "to-watch" => "Za ogledat",
        _ => "Moji seznami"
    };
}

<div class="row mb-4">
    <div class="col-12">
        <h1>
            @if (listType == "favorites")
            {
                <i class="bi bi-heart-fill text-danger"></i>
            }
            else if (listType == "watchlist")
            {
                <i class="bi bi-eye-fill text-primary"></i>
            }
            else
            {
                <i class="bi bi-bookmark-fill text-warning"></i>
            }
            @ViewData["Title"]
        </h1>
    </div>
</div>

<ul class="nav nav-tabs mb-4">
    <li class="nav-item">
        <a class="nav-link @(listType == "favorites" ? "active" : "")"
           asp-action="MyLists" asp-route-listType="favorites">
            <i class="bi bi-heart-fill text-danger"></i> Priljubljeni
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(listType == "watchlist" ? "active" : "")"
           asp-action="MyLists" asp-route-listType="watchlist">
            <i class="bi bi-eye-fill text-primary"></i> Watchlist
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(listType == "to-watch" ? "active" : "")"
           asp-action="MyLists" asp-route-listType="to-watch">
            <i class="bi bi-bookmark-fill text-warning"></i> Za ogledat
        </a>
    </li>
</ul>

@if (Model != null && Model.Any())
{
    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 row-cols-xl-6 g-4">
        @foreach (var favorite in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(favorite.Movie.PosterUrl))
                    {
                        <img src="@favorite.Movie.PosterUrl" class="card-img-top" alt="@favorite.Movie.Title"
                             style="height: 300px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center"
                             style="height: 300px;">
                            <i class="bi bi-film" style="font-size: 4rem; color: white;"></i>
                        </div>
                    }
                    <div class="card-body p-2">
                        <h6 class="card-title text-truncate" title="@favorite.Movie.Title">@favorite.Movie.Title</h6>
                        <p class="card-text small">
                            <small class="text-muted">@favorite.Movie.Year</small><br>
                            @if (favorite.Movie.Ratings.Any())
                            {
                                <span class="badge bg-warning text-dark">
                                    <i class="bi bi-star-fill"></i> @favorite.Movie.AverageRating.ToString("F1")
                                </span>
                            }
                        </p>
                        <small class="text-muted">Dodano: @favorite.AddedAt.ToString("dd.MM.yyyy")</small>
                    </div>
                    <div class="card-footer bg-transparent border-0 p-2">
                        <a asp-controller="Movies" asp-action="Details" asp-route-id="@favorite.MovieId"
                           class="btn btn-sm btn-primary w-100 mb-1">
                            <i class="bi bi-eye"></i> Poglej
                        </a>
                        <form asp-controller="Movies" asp-action="RemoveFromList" method="post">
                            <input type="hidden" name="movieId" value="@favorite.MovieId" />
                            <input type="hidden" name="listType" value="@listType" />
                            <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                                <i class="bi bi-trash"></i> Odstrani
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Vaš seznam je prazen.
        <a asp-controller="Movies" asp-action="Index">Poiščite filme</a> in jih dodajte na seznam!
    </div>
}