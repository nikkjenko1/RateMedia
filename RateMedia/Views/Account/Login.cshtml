@{
    ViewData["Title"] = "Prijava";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow">
            <div class="card-body p-5">
                <h2 class="text-center mb-4">
                    <i class="bi bi-box-arrow-in-right"></i> Prijava
                </h2>

                <form asp-action="Login" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label for="email" class="form-label">E-pošta</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input type="email" class="form-control" id="email" name="email"
                                   required placeholder="vas.email@primer.com">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Geslo</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            <input type="password" class="form-control" id="password" name="password"
                                   required placeholder="••••••••">
                        </div>
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="rememberMe" name="rememberMe">
                        <label class="form-check-label" for="rememberMe">
                            Zapomni si me
                        </label>
                    </div>

                    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-box-arrow-in-right"></i> Prijavi se
                        </button>
                    </div>
                </form>

                <hr class="my-4">

                <div class="text-center">
                    <p class="mb-0">Nimate računa?</p>
                    <a asp-action="Register" class="btn btn-outline-secondary mt-2">
                        <i class="bi bi-person-plus"></i> Registrirajte se
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
